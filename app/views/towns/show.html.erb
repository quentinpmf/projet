<div class="bootstrap">
  <div class="container">
    
    <div class="row">
      <p id="notice"><%= notice %></p>
    </div>
    <div class="row">
      <p>
        <strong>Nom:</strong>
        <%= @town.nom %>
      </p>
    </div>
    <div class="row">
      <p>
        <strong>Latitude:</strong>
        <%= @town.latitude %>
      </p>
    </div>
    <div class="row">
      <p>
        <strong>Longitude:</strong>
        <%= @town.longitude %>
      </p>
    </div>
    <div class="row">
      <p>
         <strong>Météo:</strong>
         <%= @town.weather.summary %>
      </p>
    </div>
    <div class="row">
      <p>
         <strong>Temp:</strong>
         <%= @town.weather.temperature %>
      </p>
    </div>
    <div class="row">
        <%= link_to 'Edit', edit_town_path(@town) %> |
        <%= link_to 'Back', towns_path %>
    </div>
  </div>
</div>