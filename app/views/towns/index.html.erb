<h1>Listing towns</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @towns.each do |town| %>
      <tr>
        <td><%= town.nom %></td>
        <td><%= town.latitude %></td>
        <td><%= town.longitude %></td>      
        <td>
          <div class="bootstrap">
            <button>
               <%= link_to 'Show', town %>
            </button>
          </div>
        </td>
        <td>
          <div class="bootstrap">
            <button>
               <%= link_to 'Edit', edit_town_path(town) %>
            </button>
          </div>
         </td>
        <td>
          <div class="bootstrap">
            <button>
               <%= link_to 'Destroy', town, method: :delete, data: { confirm: 'Are you sure?' } %>
            </button>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Town', new_town_path %>
